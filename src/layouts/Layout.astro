---
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = "BADZZE portfolio" } = Astro.props;
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Google Fonts: Rubik Glitch (Display), Anton, Inter (Body) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Anton&family=Inter:wght@400;500;700;900&family=Rubik+Glitch&display=swap" rel="stylesheet">
	</head>
	<body class="bg-background text-foreground font-sans overflow-x-hidden selection:bg-primary selection:text-primary-foreground">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-display: 'Rubik Glitch', sans-serif;
		--font-sans: 'Inter', sans-serif;
	}
	
	h1, h2, h3, h4, h5, h6, .font-display {
		font-family: var(--font-display);
	}
	
	body {
		font-family: var(--font-sans);
	}
</style>
